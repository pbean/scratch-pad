{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "scratch-pad",
  "version": "0.1.0",
  "identifier": "com.pinkyd.scratch-pad",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "scratch-pad",
        "width": 800,
        "height": 600,
        "center": true,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "decorations": true,
        "transparent": false,
        "visible": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": []
    }
  },
  "permissions": [
    {
      "identifier": "default",
      "allow": [
        "create_note",
        "update_note",
        "delete_note",
        "get_all_notes",
        "search_notes",
        "search_notes_paginated",
        "search_notes_boolean_paginated",
        "validate_boolean_search_query",
        "save_settings",
        "register_global_shortcut"
      ]
    }
  ],
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
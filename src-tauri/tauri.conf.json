{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "scratch-pad",
  "version": "0.1.0",
  "identifier": "com.pinkyd.scratch-pad",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "scratch-pad",
        "width": 800,
        "height": 600,
        "center": true,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "decorations": true,
        "transparent": false,
        "visible": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "identifier": "com.pinkyd.scratch-pad",
    "publisher": "PinkyD",
    "category": "Productivity",
    "shortDescription": "A quick note-taking scratch pad application",
    "longDescription": "Scratch Pad is a lightweight, cross-platform note-taking application designed for quick thoughts and temporary notes. Features global shortcuts, search functionality, and a clean, distraction-free interface.",
    "copyright": "Copyright Â© 2025 PinkyD. All rights reserved.",
    "license": "MIT",
    "licenseFile": "../LICENSE",
    "homepage": "https://github.com/pinkydprojects/scratch-pad",
    "resources": [],
    "externalBin": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "wix": {
        "language": "en-US",
        "template": "main.wxs",
        "fragmentPaths": [],
        "componentGroupRefs": [],
        "componentRefs": [],
        "featureGroupRefs": [],
        "featureRefs": [],
        "mergeRefs": [],
        "skipWebviewInstall": false,
        "license": "../LICENSE",
        "enableElevatedUpdateTask": false,
        "bannerPath": "icons/banner.bmp",
        "dialogImagePath": "icons/dialog.bmp"
      },
      "nsis": {
        "template": "installer.nsi",
        "license": "../LICENSE",
        "headerImage": "icons/header.bmp",
        "sidebarImage": "icons/sidebar.bmp",
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "license": "../LICENSE",
      "useBootstrapper": false,
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null,
      "dmg": {
        "background": "icons/dmg-background.png",
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        }
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.0-37",
          "libgtk-3-0",
          "libayatana-appindicator3-1"
        ],
        "files": {},
        "desktopTemplate": "scratch-pad.desktop"
      },
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      }
    }
  }
}
